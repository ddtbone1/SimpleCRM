@model IEnumerable<SimpleCRM.Models.Timesheet>

@{
    ViewData["Title"] = "Weekly Timesheet View";
    var totalHours = Model?.Sum(t => t.HoursWorked) ?? 0;
    var billableHours = Model?.Where(t => t.IsBillable).Sum(t => t.HoursWorked) ?? 0;
    var nonBillableHours = totalHours - billableHours;
    var avgHoursPerDay = Model?.Any() == true ? Math.Round(totalHours / 7, 1) : 0;
}

<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Weekly Timesheet View</h1>
        <a asp-action="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
            Back to Timesheet
        </a>
    </div>

    <!-- Weekly Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                            <span class="text-white font-bold">H</span>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Hours</dt>
                            <dd class="text-lg font-medium text-gray-900">@totalHours.ToString("F1")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                            <span class="text-white font-bold">B</span>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Billable Hours</dt>
                            <dd class="text-lg font-medium text-gray-900">@billableHours.ToString("F1")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center">
                            <span class="text-white font-bold">N</span>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Non-Billable</dt>
                            <dd class="text-lg font-medium text-gray-900">@nonBillableHours.ToString("F1")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                            <span class="text-white font-bold">A</span>
                        </div>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Avg Hrs/Day</dt>
                            <dd class="text-lg font-medium text-gray-900">@avgHoursPerDay</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Timesheet Entries -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">This Week's Entries</h3>
            
            @if (Model != null && Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Date
                                </th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Agent
                                    </th>
                                }
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Project
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Description
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Category
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Hours
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Billable
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Actions
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model.OrderBy(t => t.Date))
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @item.Date.ToString("MMM dd, yyyy")
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            @(item.User?.Agent?.Name ?? "N/A")
                                        </td>
                                    }
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @Html.DisplayFor(modelItem => item.ProjectName)
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate">
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                                        @item.HoursWorked.ToString("F1")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (item.IsBillable)
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                                No
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (item.Status == "DRAFT")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                                Draft
                                            </span>
                                        }
                                        else if (item.Status == "SUBMITTED")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                Submitted
                                            </span>
                                        }
                                        else if (item.Status == "APPROVED")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                                Approved
                                            </span>
                                        }
                                        else if (item.Status == "REJECTED")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                                Rejected
                                            </span>
                                        }
                                        else if (item.Status == "LOCKED")
                                        {
                                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                                Locked
                                            </span>
                                        }
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            @if (item.Status == "SUBMITTED")
                                            {
                                                <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="inline">
                                                    <button type="submit" class="text-green-600 hover:text-green-900 mr-2">Approve</button>
                                                </form>
                                                <form asp-action="Reject" asp-route-id="@item.Id" method="post" class="inline">
                                                    <button type="submit" class="text-red-600 hover:text-red-900">Reject</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <div class="text-gray-500 text-lg">
                        No timesheet entries found for this week.
                    </div>
                    <div class="mt-4">
                        <a asp-action="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Add Entry
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>