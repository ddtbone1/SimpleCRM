@model SimpleCRM.Models.Timesheet

@{
    ViewData["Title"] = "Edit Timesheet Entry";
}

<div class="max-w-2xl mx-auto mt-12">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Edit Timesheet Entry</h2>
        
        <form asp-action="Edit" method="post" class="space-y-6">
            <input asp-for="Id" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            
            <div>
                <label for="Date" class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                <input asp-for="Date" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                <span asp-validation-for="Date" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label for="HoursWorked" class="block text-sm font-medium text-gray-700 mb-2">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" step="0.5" min="0.5" max="24" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                <span asp-validation-for="HoursWorked" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label for="Description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                <textarea asp-for="Description" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required placeholder="Describe your work..."></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label for="ProjectName" class="block text-sm font-medium text-gray-700 mb-2">Project Name</label>
                <input asp-for="ProjectName" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter project name" />
                <span asp-validation-for="ProjectName" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center space-x-4">
                <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
                    Update Entry
                </button>
                <a asp-controller="Timesheet" asp-action="Index" class="text-gray-600 hover:text-gray-800 font-medium">
                    Cancel
                </a>
            </div>
        </form>

        <a asp-controller="Timesheet" asp-action="Index" class="inline-block mt-6 text-purple-600 hover:underline">Back to Timesheet</a>
    </div>
</div>
