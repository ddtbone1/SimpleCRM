@model SimpleCRM.Models.Timesheet

@{
    ViewData["Title"] = "Delete Timesheet Entry";
}

<div class="max-w-2xl mx-auto mt-12">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-3xl font-bold text-red-600 mb-6">Delete Timesheet Entry</h2>
        
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <p class="text-red-800 font-medium">⚠️ Are you sure you want to delete this timesheet entry?</p>
            <p class="text-red-600 text-sm mt-1">This action cannot be undone.</p>
        </div>

        <div class="bg-gray-50 rounded-lg p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Entry Details:</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="text-gray-600">Date:</span>
                    <span class="font-medium ml-2">@Model.Date.ToString("MMM dd, yyyy")</span>
                </div>
                <div>
                    <span class="text-gray-600">Hours Worked:</span>
                    <span class="font-medium ml-2">@Model.HoursWorked.ToString("F1")h</span>
                </div>
                <div class="col-span-2">
                    <span class="text-gray-600">Project:</span>
                    <span class="font-medium ml-2">@Model.ProjectName</span>
                </div>
                <div class="col-span-2">
                    <span class="text-gray-600">Description:</span>
                    <span class="font-medium ml-2">@Model.Description</span>
                </div>
                <div>
                    <span class="text-gray-600">Created:</span>
                    <span class="font-medium ml-2">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="flex items-center space-x-4">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
                Yes, Delete Entry
            </button>
            <a asp-controller="Timesheet" asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-6 rounded-md transition duration-200">
                Cancel
            </a>
        </form>

        <a asp-controller="Timesheet" asp-action="Index" class="inline-block mt-6 text-purple-600 hover:underline">Back to Timesheet</a>
    </div>
</div>
