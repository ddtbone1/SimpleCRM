@model IEnumerable<SimpleCRM.Models.User>

@if (!Model.Any())
{
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-center">
        <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-600">No pending user registrations</p>
    </div>
}
else
{
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User Details</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Selected Agent</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registration Date</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var user in Model)
                    {
                        <tr class="hover:bg-gray-50" id="user-row-@user.Id">
                            <td class="px-4 py-3 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-8 w-8 flex-shrink-0">
                                        <div class="h-8 w-8 bg-gray-300 rounded-full flex items-center justify-center">
                                            <span class="text-xs font-medium text-gray-700">
                                                @user.Username.Substring(0, Math.Min(2, user.Username.Length)).ToUpper()
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">@user.Username</div>
                                        <div class="text-sm text-gray-500">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3 whitespace-nowrap">
                                @if (user.Agent != null)
                                {
                                    <div class="text-sm text-gray-900">@user.Agent.Name</div>
                                    <div class="text-sm text-gray-500">@user.Agent.Department</div>
                                }
                                else
                                {
                                    <span class="text-sm text-gray-500">No agent selected</span>
                                }
                            </td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                @user.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                            </td>
                            <td class="px-4 py-3 whitespace-nowrap text-sm font-medium space-x-2">
                                <button onclick="approveUser(@user.Id, '@user.Username')" 
                                        class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                    Approve
                                </button>
                                <button onclick="rejectUser(@user.Id, '@user.Username')" 
                                        class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                    Reject
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
