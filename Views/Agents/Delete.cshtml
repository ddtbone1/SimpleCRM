@model SimpleCRM.Models.Agent

@{
    ViewData["Title"] = "Delete Agent";
}

<div class="max-w-2xl mx-auto mt-12">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-3xl font-bold text-red-600 mb-6">Delete Agent</h2>
        
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <p class="text-red-800 font-medium">⚠️ Are you sure you want to delete this agent?</p>
            <p class="text-red-600 text-sm mt-1">This action cannot be undone.</p>
        </div>

        <div class="bg-gray-50 rounded-lg p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Agent Details:</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                    <span class="text-gray-600">Name:</span>
                    <span class="font-medium ml-2">@Model.Name</span>
                </div>
                <div>
                    <span class="text-gray-600">Email:</span>
                    <span class="font-medium ml-2">@Model.Email</span>
                </div>
                <div>
                    <span class="text-gray-600">Phone:</span>
                    <span class="font-medium ml-2">@Model.Phone</span>
                </div>
                <div>
                    <span class="text-gray-600">Department:</span>
                    <span class="font-medium ml-2">@Model.Department</span>
                </div>
                <div>
                    <span class="text-gray-600">Position:</span>
                    <span class="font-medium ml-2">@Model.Position</span>
                </div>
                <div>
                    <span class="text-gray-600">Hire Date:</span>
                    <span class="font-medium ml-2">@Model.HireDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div>
                    <span class="text-gray-600">Status:</span>
                    <span class="font-medium ml-2">
                        @if (Model.IsActive)
                        {
                            <span class="text-green-600">Active</span>
                        }
                        else
                        {
                            <span class="text-red-600">Inactive</span>
                        }
                    </span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="flex items-center space-x-4">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
                Yes, Delete Agent
            </button>
            <a asp-controller="Agents" asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-6 rounded-md transition duration-200">
                Cancel
            </a>
        </form>

        <a asp-controller="Agents" asp-action="Index" class="inline-block mt-6 text-green-600 hover:underline">Back to Agents</a>
    </div>
</div>
