@model SimpleCRM.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="max-w-lg mx-auto mt-12">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7 text-purple-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487a2.1 2.1 0 112.97 2.97L7.5 19.789l-4 1 1-4 12.362-12.302z" />
            </svg>
            Edit Customer
        </h2>
        <form asp-action="Edit" method="post" class="space-y-6">
            <input type="hidden" asp-for="Id" />
            <div>
                <label class="block mb-1 font-medium">Name</label>
                <input asp-for="Name" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label class="block mb-1 font-medium">Email</label>
                <input asp-for="Email" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label class="block mb-1 font-medium">Phone</label>
                <input asp-for="Phone" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" />
                <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
            </div>
            <button type="submit" class="bg-gradient-to-r from-purple-500 to-blue-600 text-white px-6 py-2 rounded-lg shadow hover:scale-105 transition">Save</button>
        </form>
        <a asp-controller="Customers" asp-action="Index" class="inline-block mt-6 text-blue-600 hover:underline">Back to List</a>
    </div>
</div>
