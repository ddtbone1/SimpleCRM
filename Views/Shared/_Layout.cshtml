<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleCRM</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="min-h-screen flex bg-gray-100">
        @if (User.Identity.IsAuthenticated)
        {
            <aside class="w-64 bg-gradient-to-b from-gray-800 to-gray-900 text-white shadow-xl">
                <div class="p-6 text-2xl font-bold text-center bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent border-b border-gray-700">
                    SimpleCRM
                </div>
                <nav class="flex-1 p-4">
                    <div class="mb-4 text-sm text-gray-300">
                        Welcome, @User.Identity.Name (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)
                    </div>
                    <ul class="space-y-3">
                        <li>
                            <a asp-controller="Dashboard" asp-action="Index" class="block px-4 py-3 rounded-lg transition-all duration-200 hover:bg-gray-700 hover:shadow-md">
                                📊 Dashboard
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Customers" asp-action="Index" class="block px-4 py-3 rounded-lg transition-all duration-200 hover:bg-gray-700 hover:shadow-md">
                                👥 Customers @(User.IsInRole("Admin") ? "" : "(View Only)")
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Agents" asp-action="Index" class="block px-4 py-3 rounded-lg transition-all duration-200 hover:bg-gray-700 hover:shadow-md">
                                    👨‍💼 Agents
                                </a>
                            </li>
                        }
                        <li>
                            <a asp-controller="Timesheet" asp-action="Index" class="block px-4 py-3 rounded-lg transition-all duration-200 hover:bg-gray-700 hover:shadow-md">
                                ⏰ Timesheet @(User.IsInRole("Admin") ? "(All)" : "(Own)")
                            </a>
                        </li>
                        <li class="border-t border-gray-700 pt-3 mt-6">
                            <a asp-controller="Account" asp-action="Logout" class="block px-4 py-3 rounded-lg transition-all duration-200 hover:bg-red-600 text-red-300 hover:text-white">
                                🚪 Logout
                            </a>
                        </li>
                    </ul>
                </nav>
            </aside>
        }
        
        <main class="flex-1 p-8">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <footer class="border-t text-center text-gray-500 py-4 bg-white shadow mt-8">
            &copy; 2025 - SimpleCRM
        </footer>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
